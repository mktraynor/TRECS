<div class= "show-container">
  <div class="showcard">
    <div class= "container-sm">
      <div class="row"> <!-- Title & Username (NEED TO ADD USERNAME TO USER TABLE) -->
        <div class="col-sm-6">
          <h1><strong><%= @rec.name %></strong></h1>
        </div>
        <div class="col-sm-6 text-end">
          <h4>@mktraynor<%# @user.username %></h4>
        </div>
              <% @rec.photos.each do |photo|%>
      <%= cl_image_tag photo.key%>
      <% end %>
      </div>


      <div class="row"> <!-- Category, Rating & Edit/Delete buttons -->
        <div class="col-sm">
          <h5><%= @rec.category.name.capitalize %></h5>
          <h5><%= @rec.rating %></h5>
        </div>
        <div class="col-sm text-end">
          <div>
            <% if policy(@rec).edit? %>
              <%= link_to "Edit", edit_rec_path(@rec), class: "btn-primary" %>
            <% end %>
            <% if policy(@rec).destroy? %>
              <%= link_to "Delete", rec_path(@rec), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn-primary" %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="row" style="height: 500px;"> <!-- Photos & Map -->
        <div class="col-sm-7">
          <%# cl_image_tag @rec.photo.key, height: 100px, width: auto, crop: :fill if @rec.photo.attached? %>
        </div>
        <div class="col-sm-5">
          <div style="width: 100%; height: 100%;"
            data-controller="map"
            data-map-markers-value="<%= @markers.to_json %>"
            data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
          </div>
        </div>
      </div>

      <div class="row"> <!-- Body: description, functions, etc. -->
        <div class="col-sm-9">
          <br>
          <p>
            <strong>Address:</strong> <%= @rec.address %>
          </p>
          <p>
            <%= @rec.description %>
          </p>
          <p class="card-text">
            <button type="button" class="btn-primary" data-bs-toggle="modal" data-bs-target="#new_pin_modal">
              Save rec
            </button>
            <%= link_to "Visit Website", @rec.website, class: "btn-primary" %>
            <br>
          </p>
        </div>
        <div class="col-sm-3">
          <p>
            <!-- REC RATING -->
          </p>
        </div>
      </div>

      <div class="row"> <!-- Reviews -->
        <div class="col-sm">
          <div>
            <br>
            <h4><strong>Reviews</strong></h4>
          </div>
          <br>
          <ul class="list-group list-group-flush" style="width: 100%;">
            <li class="list-group-item">
              <p>
                <strong>@mktraynor</strong>
                <br>
                Loved this place!

              </p>
            </li>
            <li class="list-group-item">
              <p>
                <strong>@elizaup</strong>
                <br>
                Highly recommend!
              </p>
            </li>
          </ul>
        </div>
      </div>

    </div>
  </div>
</div>

<%= render "modal", board: @board, pin: @pin%>

<div class= "show-container">
  <div class="showcard">
    <div class= "container-sm">
      <div class="row"> <!-- Title & Username (NEED TO ADD USERNAME TO USER TABLE) -->
        <div class="col-sm-6">
          <h1><strong><%= @rec.name %></strong></h1>
        </div>
        <div class="col-sm-6 text-end">
          <h4>@<%# @user.username %></h4>
        </div>
      </div>

      <div class="row"> <!-- Category & Edit/Delete buttons -->
        <div class="col-sm">
          <h5><%= @rec.category %></h5>
        </div>
        <div class="col-sm text-end">
          <div>
            <% if policy(@rec).edit? %>
              <%= link_to "Edit", edit_rec_path(@rec), class: "btn btn-auto" %>
            <% end %>
            <% if policy(@rec).destroy? %>
              <%= link_to "Delete", rec_path(@rec), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-auto" %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="row" style="height: 500px;"> <!-- Photos & Map -->
        <div class="col-sm-8">
          <img class="d-block w-100" src="/assets/restaurant_example.jpg" alt="Photo">
        </div>
        <div class="col-sm-4">
          <div style="width: 100%; height: 100%;"
            data-controller="map"
            data-map-markers-value="<%= @markers.to_json %>"
            data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
          </div>
        </div>
      </div>

      <div class="row"> <!-- Body: description, rating, functions, etc. -->
        <div class="col-sm-9">
          <br>
          <p>
            <strong>Address:</strong> <%= @rec.address %>
          </p>
          <p>
            <%= @rec.description %>
          </p>
          <p>
            <%= link_to "Save Rec", "#", class: "btn btn-main" %>
            <%= link_to "Visit Website", "#", class: "btn btn-main" %>
          </p>
          <br>
        </div>
        <div class="col-sm-3">
          <p>
            <!-- REC RATING -->
          </p>
        </div>
      </div>

      <div class="row"> <!-- Reviews -->
        <div class="col-sm">
          <div>
            <h4><strong>Reviews</strong></h4>
          </div>
          <br>
          <ul class="list-group list-group-flush" style="width: 100%;">
            <li class="list-group-item">
              <p>
                Review 1
              </p>
            </li>
            <li class="list-group-item">
              <p>
                Review 2
              </p>
            </li>
            <li class="list-group-item">
              <p>
                Review 3
              </p>
            </li>
          </ul>
        </div>
      </div>

    </div>
  </div>




</div>

<div class= "content">
  <!-- <div class= "container"> -->

    <div class="col-sm-8">
        <div class= "cards">
        <% @recs.each do |rec| %>
          <div class="card">
            <div class="card-title">
              <br>
              <h5><strong><%= rec.name%></strong></h5>
            </div>
            <div class="card-img">
              <%# cl_image_tag rec.photo.first.key, height: 100px, width: auto, crop: :fill %>
            </div>
            <div class="card-body">
              <p><%= rec.description%></p>
              <p><%= rec.address%></p>
              <p><%= rec.rating%></p>
            </div>
            <%= link_to "See more", rec_path(rec), class: "btn-ghost" %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="index-map">
        <div style="width: 100%; height: 100%;"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>

  <!-- </div> -->





</div>

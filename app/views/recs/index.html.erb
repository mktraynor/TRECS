<div class= "index-content">

  <div class="col-sm-8">
    <div class= "cards">
      <% @recs.each do |rec| %>
        <div class="card">
          <% unless rec.photos.first.nil? %>
              <div class="index-card-img" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path rec.photos.first.key %>')">
                <%# cl_image_tag rec.photos.first.key %>
              </div>
          <% end %>
          <div class="body" style="padding: 8px;">
            <h5 class="card-title"><strong><%= rec.name %></strong></h5>
            <h6 class="card-subtitle text-muted"><%= rec.category.name.capitalize %></h6><br>
            <h6 class="card-subtitle"><%= rec.rating %></h6> <br>
            <!-- <p class="card-text"> <%= rec.description %> </p> -->
            <p class="card-text"> <%= rec.address %> </p> <br>
            <%= link_to "See More", rec_path(rec), class: "btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="col-sm-4">
    <div class="index-map">
      <div id="map_layout" style="width: 100%; height: 100vh;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>

</div>

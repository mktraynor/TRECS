<div class= "index-content">

  <div class="col-sm-8">
    <div class= "cards">
      <% @recs.each do |rec| %>
        <div class="card">

          <div class="card-img-top">
            <%# cl_image_tag rec.photo.first.key, height: 100px, width: auto, crop: :fill %>
          </div>

          <div class="body" style="padding: 2px;">
            <h5 class="card-title"><strong><%= rec.name %></strong></h5>
            <h6 class="card-subtitle text-muted"><%= rec.category.name.capitalize %></h6>
            <h6 class="card-subtitle"><%= rec.rating %></h6> <br>
            <p class="card-text"> <%= rec.description %> </p>
            <p class="card-text"> <%= rec.address %> </p> <br>
            <%= link_to "See More", rec_path(rec), class: "btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="col-sm-4">
    <div class="index-map">
      <div style="width: 100%; height: 100%;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>

</div>

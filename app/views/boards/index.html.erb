<div id="board-page">
  <div class="board-title">
    <h1><strong>All Boards</strong></h1>
    <h6><%= link_to "+", new_board_path, class: "btn-primary", id: "create-board" %></h6>
  </div>

  <!-- <div class= "boards-content col-sm-4"> -->
      <div class= "board-cards row row-cols-3">
        <% @user.boards.each do |board| %>
          <div class="card card-board border-0">
            <!-- <div class="card-title">
              <br>
              <h5><strong><%= board.name %></strong></h5>
            </div> -->
            <div class="card-img">
              <%# cl_image_tag rec.photo.first.key, height: 100px, width: auto, crop: :fill %>
              <div class="imgs">
                <div class="img big-img">
                </div>
              </div>
              <div class="imgs small-imgs">
                <div class="img small-img">
                </div>
                <div class="img small-img">
                </div>
              </div>
            </div>
            <div class="card-body">
              <%= link_to board.name, board_path(board), class: "board-to-pin btn-primary" %>
            </div>
          </div>
        <% end %>
        <div class="card card-board new-card">
          <div class="card-title">
            <br>
            <div class="nav-item dropdown">
            <%= button_tag "New Board", class: "avatar dropdown-toggle btn-primary btn-new-board", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <%# link_to "New board", new_board_path, class: "dropdown-item" %>
                <button type="button" class="btn-primary" data-bs-toggle="modal" data-bs-target="#new_board_modal">
                 New board
              </button>
              </div>
            </div>
          </div>
        </div>
      </div>
  <!-- </div> -->

<!-- </div> -->

<%= render "newmodal", board: @board%>

<div class="show-content">
  <div class="showcard">
    <div class= "container-sm">

      <div class="row" style="text-align: center;">
        <h1><strong>My Boards</strong></h1>
      </div>

      <div class= "board-cards row row-cols-4">
        <% @user.boards.each do |board| %>
          <div class="card card-board border-0">
            <div style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @rec.photos.first.key %>')"></div>
            <div class="card-body">
              <%= link_to board.name, board_path(board), class: "board-to-pin btn-primary" %>
            </div>
          </div>
        <% end %>
        <div class="card card-board new-card">
          <div class="card-title">
            <br><br><br>
            <button type="button" class="btn-primary btn-new-board" data-bs-toggle="modal" data-bs-target="#new_board_modal">
              New board
             </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render "newmodal", board: @board%>

<div class="modal fade" id="edit_pin_modal_<%= pin.id %>" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Move pin to another board</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
        </button>
      </div>
      <div class="modal-body">
        <div class="list-group">
          <% boards.each do |board| %>
            <%= link_to pin_path(pin, board_id: board.id), class:"list-group-item list-group-item-action", data:{turbo_method: :patch} do %>
              <%= board.name %>
              <%# aria-current:"true" if @board %>
            <% end %>
          <% end  %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-cancel" data-bs-dismiss="modal">Back</button>
      </div>
    </div>
  </div>
</div>
